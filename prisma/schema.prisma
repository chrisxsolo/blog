// This is your updated Prisma schema file.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  likes     Int
  likesList Likes[]  // Renamed field for relationship

  // Add any other fields you need for your blog posts
}

model Likes {
  id         Int    @id @default(autoincrement())
  published  Boolean @default(false)
  postId     Int

  // Define the relationship between Likes and Post
  post       Post   @relation(fields: [postId], references: [id])
}
